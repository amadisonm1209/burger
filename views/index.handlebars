<h1>Eat-Da-Burger</h1>

<!-- Pass in data from server.js -->
<ul>
  {{#each burgers}}
  	<li>
  		<p><span class="label">ID:</span> {{this.id}}</p>
      <p><span class="label">Burger:</span> {{this.burger-name}}</p>
      <button data-id="{{this.id}}" class="change-eaten">EAT ME!</button>
  	</li>
  {{/each}}
</ul>

<h2>Add Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="burger-name">Burger Name:</label>
    <input type="text" id="burger-name" name="name">
  </div>

  <button type="submit">Add to Menu</button>
</form>